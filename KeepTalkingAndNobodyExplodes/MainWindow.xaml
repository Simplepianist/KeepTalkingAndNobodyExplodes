                    <Button x:Name="btnSequence" Content="Sequence" HorizontalAlignment="Left" Margin="112,72,0,0"
                            VerticalAlignment="Top" Width="112" Height="47" Click="btnSequence_Click" />
                    <Button x:Name="btnLabirinth" Content="Labyrinth" HorizontalAlignment="Left" Margin="224,72,0,0"
                            VerticalAlignment="Top" Width="112" Height="47" Click="btnLabyrinth_Click" />
                    <Button x:Name="btnPasswd" Content="Passwort" HorizontalAlignment="Left" Margin="336,72,0,0"
                            VerticalAlignment="Top" Width="112" Height="47" Click="btnPasswd_Click" />


                    <Grid HorizontalAlignment="Left" Height="315" Margin="615,105,0,0" VerticalAlignment="Top"
                          Width="164">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="49*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <CheckBox x:Name="ch_SND" Content="SND" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="0" Grid.Column="0"/>
                        <CheckBox x:Name="ch_CLR" Content="CLR" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                        <CheckBox x:Name="ch_CAR" Content="CAR" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                        <CheckBox x:Name="ch_IND" Content="IND" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                        <CheckBox x:Name="ch_FRQ" Content="FRQ" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                        <CheckBox x:Name="ch_SIG" Content="SIG" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="5" Grid.Column="0"/>
                        <CheckBox x:Name="ch_NSA" Content="NSA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="6" Grid.Column="0"/>
                        <CheckBox x:Name="ch_MSA" Content="MSA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="7" Grid.Column="0"/>
                        <CheckBox x:Name="ch_TRN" Content="TRN" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="8" Grid.Column="0"/>
                        <CheckBox x:Name="ch_BOB" Content="BOB" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Row="9" Grid.Column="0"/>
                        <CheckBox x:Name="ch_vokal" Content="Vokal in Serial " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="3"  />
                        <Label  Content="Anzahl Batterien" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Column="1" Grid.Row="5"/>
                        <TextBox x:Name="count_Batterie" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="6" TextWrapping="Wrap" Text="0"/>
                        <CheckBox x:Name="ch_parallel" Content="Parallel-Port" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="4"  />
                        <CheckBox x:Name="ch_iseven" Content="Gerade Serial" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="2"  />
                        <Button x:Name="bntSaveConfig" Content="Speichern" HorizontalAlignment="Stretch" Grid.Row="10" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Click="bntSaveConfig_Click" />
                        <Label x:Name="lb_saved" Content="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="11"/>

                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Wires">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="Back1" Content="&lt;--" HorizontalAlignment="Left" Margin="10,10,0,0"
                            VerticalAlignment="Top" Width="47" Height="38" Grid.ColumnSpan="2" Click="Back_Click" />
                    <Label Content="Abfolge der Kabel (r,g,b,s)" HorizontalAlignment="Left" Margin="94,126,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                    <TextBox x:Name="tb_wires" HorizontalAlignment="Left" Height="26" Margin="246,126,0,0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="btn_send_wires" Content="Senden" HorizontalAlignment="Left" Margin="371,126,0,0" VerticalAlignment="Top" Width="87" Height="26" Click="btn_send_wires_Click"/>
                    <Label Content="Druchtrenne den" HorizontalAlignment="Left" Margin="103,184,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="263"/>
