                    <Button x:Name="btnSimonSays" Content="Simon Says" HorizontalAlignment="Left" Margin="336,30,0,0"
                            VerticalAlignment="Top" Width="112" Height="47" Click="btnSimonSays_Click" />
                    <Button x:Name="btnWords" Content="Wörter Kette" HorizontalAlignment="Left" Margin="448,30,0,0"
